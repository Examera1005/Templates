{
    "name": "PWA Template",
    "short_name": "PWA",
    "description": "Progressive Web App Template with offline functionality",
    "start_url": "/",
    "display": "standalone",
    "orientation": "portrait-primary",
    "theme_color": "#007bff",
    "background_color": "#ffffff",
    "scope": "/",
    "lang": "en",
    "dir": "ltr",
